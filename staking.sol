// Solidity smart contract that allows users to stake their tokens for up to 4 years and earn different APY based on the duration of the stake:

pragma solidity ^0.8.18;



contract TokenStaking {
    IBEP20 public token;
    uint256 constant APY_FULL = 180;
    uint256 constant APY_PARTIAL = 140;

    uint256 public STAKING_START_TIME; 
    uint256 constant STAKING_DURATION = 1460 days;
    
    struct Stake {
        uint256 amount;
        uint256 startTime;
        uint256 endTime;
        uint256 apy;
    }
    
    mapping(address => Stake[]) public stakes;
    
    event Staked(address indexed user, uint256 amount, uint256 endTime, uint256 apy);
    event Unstaked(address indexed user, uint256 amount);
    
    constructor(IBEP20 _token, uint256 _stakingStartTime) {
        token = _token;
        STAKING_START_TIME = _stakingStartTime;
    }
    
    function stake(uint256 amount) external {
    require(amount > 0, "Amount must be greater than 0");
   require(block.timestamp < STAKING_START_TIME + STAKING_DURATION, "Staking period has not started or ended");
    uint256 apy = APY_FULL;
    uint256 startTime = STAKING_START_TIME;
    uint256 endTime = startTime + STAKING_DURATION;
    token.transferFrom(msg.sender, address(this), amount);
    stakes[msg.sender].push(Stake(amount, startTime, endTime, apy));
    emit Staked(msg.sender, amount, endTime, apy);
    }


    function unstake() external {
    Stake[] storage userStakes = stakes[msg.sender];
    require(userStakes.length > 0, "No stakes to unstake");
    Stake storage lastStake = userStakes[userStakes.length - 1];
    require(block.timestamp >= lastStake.startTime, "Stake has not started yet");
    require(block.timestamp >= lastStake.endTime || block.timestamp >= lastStake.startTime + 30 days, "At least 30 days must have passed since the last unstake");
    uint256 amount;
    uint256 timeElapsed;
    uint256 apy;
    if (block.timestamp >= lastStake.endTime) {
        // stake has ended, use full APY
        timeElapsed = lastStake.endTime - lastStake.startTime;
        apy = APY_FULL;
    } else {
        // stake is still active, calculate partial APY
        timeElapsed = block.timestamp - lastStake.startTime;
        apy = APY_PARTIAL;
    }
    uint256 totalInterest = (lastStake.amount * apy * timeElapsed) / (1460 days * 100);
    amount = lastStake.amount + totalInterest;
    token.transfer(msg.sender, amount);
    userStakes.pop();
    emit Unstaked(msg.sender, amount);
}
function getStakingStartTime() external view returns (uint256) {
    return STAKING_START_TIME;
}
}
